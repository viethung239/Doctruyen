<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="50dp"
    android:orientation="vertical"
    android:paddingHorizontal="30dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="Register"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:text="By signing in you are agreeing our Term and privacy policy"
        android:textAlignment="center"
        android:textColor="#949494"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/border_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="3dp">

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/email" />

        <EditText
            android:id="@+id/edt_email_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:hint="Email Address"
            android:maxLines="1"
            android:paddingVertical="8dp"
            android:singleLine="true"
            android:textColor="#949494"
            android:textSize="25sp">

        </EditText>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="3dp">

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/padlock" />

        <EditText
            android:id="@+id/edt_password_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:maxLines="1"
            android:paddingVertical="8dp"
            android:singleLine="true"
            android:textColor="#949494"
            android:textSize="25sp">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:background="@drawable/border_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="3dp">

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/telephone" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:hint="Phone"
            android:maxLines="1"
            android:paddingVertical="8dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="#949494"
            android:textSize="25sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:backgroundTint="#9b2cff"
        android:text="Register"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Have account ? Login now"
       android:textAlignment="center">

    </TextView>
</LinearLayout>